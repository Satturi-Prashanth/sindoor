pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_KEY')
        AWS_REGION = 'us-east-1'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/your-org/terraform-infra.git', branch: 'main'
            }
        }

        stage('Init Without Backend') {
            steps {
                // Initialize without backend to create S3 & DynamoDB
                sh 'terraform init -backend=false'
            }
        }

        stage('Create Backend Infra') {
            steps {
                // Apply only S3 & DynamoDB once
                sh 'terraform apply -target=aws_s3_bucket.tf_state -target=aws_dynamodb_table.tf_lock -auto-approve'
            }
        }

        stage('Reconfigure Backend') {
            steps {
                // Reinitialize with backend
                sh 'rm -rf .terraform'
                sh 'terraform init -reconfigure'
            }
        }

        stage('Terraform Validate') {
            steps {
                sh 'terraform validate'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                input message: 'Apply Terraform changes?'
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
